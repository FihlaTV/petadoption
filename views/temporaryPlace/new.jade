block page
  div
    .clearfix
    .row
      .col-md-12.col-sm-12.col-xs-12
        .x_panel
          //- 
            .x_title
              h2
                | Form validation 
                small sub title
              .clearfix
          .x_content
            form.form-horizontal.form-label-left(action='/tempplaces', method="post", novalidate='')
              span.section Temporary Place
              .item.form-group
                label.control-label.col-md-3.col-sm-3.col-xs-12(for='name')
                  | Name 
                  span.required *
                .col-md-6.col-sm-6.col-xs-12
                  input#name.form-control.col-md-7.col-xs-12(data-validate-length-range='6', data-validate-words='2', name='name', placeholder='Temporary place name', required='required', type='text', value='')
